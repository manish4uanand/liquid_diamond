<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Material</th>
      <th>Category</th>
      <th>Color</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.material %></td>
        <td><%= p.category %></td>
        <td><%= p.color %></td>
        <td><%= link_to 'Show', p %></td>
      </tr>
    <% end %>
  </tbody>
</table>
